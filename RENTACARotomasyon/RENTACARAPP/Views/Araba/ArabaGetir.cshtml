@model RENTACARAPP.Models.Entity.TARABA

    @{
        ViewBag.Title = "ArabaGetir";
        Layout = "~/Views/Shared/Layout.cshtml";
    }


    @using (Html.BeginForm("ArabaGuncelle", "Araba", FormMethod.Post))
    {
        <div style="margin-bottom:15"></div>



        <div class="form-group">

            <div style="margin-bottom:15px">
                <label>Araba ID</label>
                @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:15px">
                <label>Marka</label>
                @Html.DropDownListFor(m => m.TMARKA.ID, (List<SelectListItem>)ViewBag.v2, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:15px">
                <label>Model İsmi</label>
                @Html.TextBoxFor(m => m.MODEL, new { @class = "form-control" })
            </div>


            <div style="margin-bottom:15px">
                <label>Kasa Tipi</label>
                @Html.DropDownListFor(k => k.TKASATIPI.ID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
            </div>



            <div style="margin-bottom:15px">
                <label>Uretim Yılı</label>
                @Html.TextBoxFor(k => k.URETIMYILI, new { @class = "form-control" })
            </div>

            <div style="margin-bottom:15px">
                <label>Kilometre</label>
                @Html.TextBoxFor(k => k.KM, new { @class = "form-control" })
            </div>
            <button class="btn btn-warning">Araba Bilgilerini Güncelle</button>
        </div>
    }
